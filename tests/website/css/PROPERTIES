#----------------------------------------------------------------------
# BACKGROUND

background:                                             # Sets all the background properties in one declaration
background-attachment:                                  # Sets whether a background image is fixed or scrolls with the rest of the page
background-color:           #444                        # Sets the background color of an element
background-image:                                       # Sets the background image for an element 
background-position:                                    # Sets the starting position of a background image 
background-repeat:                                      # Sets how a background image will be repeated   
background-clip:                                        # Specifies the painting area of the background   
background-origin:                                      # Specifies the positioning area of the background images 
background-size:                                        # Specifies the size of the background images

#----------------------------------------------------------------------
# BLOCK

width:                      800px;                      # Sets the width of an element
height:                     500px;                      # Sets the height of an element
max-height:                 300px;                      # Sets the maximum height of an element
min-width:                  100px;                      # Sets the minimum width of an element

margin:                     0 auto;                     # All around margin (distance from next element)
margin-top:                 20px;
margin-bottom:              20px;
margin-left:                -20px;                      # Margin 20px to the left of the normal position
margin-left:                auto;                       # If margin left and right are auto, then the div is centered!
margin-right:               auto;                      

padding:                    10px;                       # All around padding

position:                   relative;                   # All future position are relative to this box
position:                   absolute;                   # Position the element function of relative position
position:                   fixed;     
right:                      0px;                        # <-- set the block's position (mode absolute or relative)
bottom:                     0px;                        # <-- set the block's position (mode absolute or relative)

border:                     1px solid #666;             # <-- add a border line all around
border-bottom:              3px solid #666;             # <-- add a line at the bottom of the block

display:                    block;                      # Specifies how a certain HTML element should be displayed
display:                    inline;
display:                    inline-block;

float:                      left;                       # Specifies whether or not a box should float
clear:                      both;                       # The clear property specifies which sides of an element where other floating elements are NOT allowed. (will move that element down if required )


z-stack:                    -1;                         # Sets the stack order of a positioned element (layering)

zoom:                       1;                          # no magnification
zoom:                       200%;                       # 2 times magnification 

#----------------------------------------------------------------------
# MOUSE 

cursor: pointer;                                        # Turn the mouse to a pointer (hand pointer in chrome)

#----------------------------------------------------------------------
# TEXT

color:                      red;                        # Set text color
text-align:                 center;                     # Specify the horizontal alignment of text
text-justify:               inter-words                 # Specifies the justification method used when text-align is "justify" (chane spacing between letters for column alignment)
vertical-align:             top;                        # Sets the vertical alignment of an element
text-decoration:                                        # Specify decoration 
text-decoration:            none;                       # links are not underlined
text-shadow:                0px 0px 1px #fff;           # <-- you can have as many shadow as you want for effect
text-shadow:                1px 1px 1px #000;
text-transform:             uppercase;                  # Controls the capitalization of text
letter-spacing:             -1px;                       # Increases or decreases the space between characters in a text
line-height:                                            # set the line height
white-space:                                            # Specify how white-space inside an element is handled
text-overflow:              ellipsis;                   # Specifies what happend when text overflows the containing element
text-overflow:              clip;                       # 
text-overflow:              "...";                      # 

#----------------------------------------------------------------------
# TABLES

border:                     none;                       # no border
border-right:               1px dotted #666;
border-top:                 3px solid #666;
border-bottom:              5px solid #444;
boarder-left:               none;                       # no right border
border-collapse:            separate;                   # borders around each cells
border-collapse:            collapse;                   # borders around each cells
boarder-spacing:            1em 0.5em;                  # cell border separation
background-color:           #ddd;                       # background color of table or cell (fct of selector) 
background:                 transparent;                # transparent background (good fo empty cell, i.e th:empty) 
padding:                    0px 10px;                   # cell padding

#----------------------------------------------------------------------
# LIST

list-style:                                             # Sets all the properties for a list in one declaration
list-style-image:                                       # Specifies an image as the list-item marker
list-style-position:                                    # Specifies if the list-item markers should appear inside or outside the content flow
list-style-type:                                        # Specifies the type of list-item marker


#----------------------------------------------------------------------
# FONTS

font:                                                   # Sets all the font properties in one declaration
font-family:                Helvetica, Arial, sans-serif;   # Specifies the font family for text (Start from right to left)
font-family:                monospace;
font-size:                  14px;                       # Specifies the font size of text 
font-size:                  1.235em; 
font-weight:                bold;                       # Specifies the weight of a font
font-style:                                             # Specifies the font style for text
color:                      #999;
color:                      red;

